//- ANCHOR -- Extends & Includes --
extends base

//- ANCHOR -- Block --
block content
    //- ============
    //- ANCHOR HERO
    //- ============
    section.hero-section
      .container
        .hero-carousel.lvl1
          include _carousel
          //- h1 Content Slider Will Go Here
        .hero-extras
          .hero-account.lvl1
            // your account info / login and signup button
           
              
            if user
              //- LOGGED-IN:
              .account--logged-in
                a.account-portrait(href="/dashboard")
                  img(src=`/img/users/${user.photo}` alt=`photo of ${user.name}`)
                .hero-account-info
                  .account-name
                    span= user.name
                  .account-actions
                    .account-status
                      span= user.status
                    .logout
                      a.btn1.logout-btn Logout
                a.btn2.begin-work(href="#")
                  i.fas.fa-snowplow
                a.btn1.account-messages(href="/dashboard-messages")
                  i.fas.fa-comments
                a.btn1.account-alerts(href="/dashboard-alerts")
                  i.fas.fa-exclamation-triangle
                a.btn1.account-jobs(href="/dashboard-jobs")
                  i.fas.fa-snowplow
                a.btn1.account-find(href="/dashboard-find")
                  i.fas.fa-search-location
            
            else
              //- NOT LOGGED-IN:
              .account--logged-out
                h3 You are not logged in
                .auth-buttons
                  a.btn2.hero-login(href="/login") 
                    h4 Login
                  a.btn2.hero-login(href="/signup") 
                    h4 Signup
                .reset-links
                  a.forgot-password I Forgot My Password
                  a.forgot-email I Forgot My Email

          .hero-weather.lvl1
            // weather info goes here
            //- h1 Weather Info Goes Here
            .weather-location
              form.weather-form
                input.city-input(placeholder="city")
                //- input.state-input(placeholder="state")
                //- input.country-input(placeholder="Country")
                //- input.unit-input(placeholder="Unit")
                select.unit-input(placeholder="°F")
                  option(value="F") °F 
                  option(value="C") °C
                button.btn1.submit-btn(type="submit") 
                  i.fas.fa-search
            .weather-daily
              .weather-icon
                img
              .weather-info
                .weather-description
                  h3 Scattered Clouds
                .weather-temp
                  .weather-temp--max
                    span.temp-label High 
                    spa.temp-temp 
                  .weather-temp--cur
                    span.temp-label Current 
                    spa.temp-temp 
                  .weather-temp--min
                    span.temp-label Low
                    spa.temp-temp 
              .weather-alerts
            //- .weather-forecast
            //-   .forecast1
            //-   .forecast2
            //-   .forecast3
            //-   .forecast4
